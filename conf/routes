# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(search: String ?= "", page: Int ?= 0)

GET     /folder/*folder             controllers.Application.findFolder(folder, page: Int ?= 0)


GET     /file/*file                 controllers.FileServer.serve(file)

# Map static resources from the /public folder to the /web URL path
GET     /web/*file                  controllers.Assets.at(path="/public", file)
